<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="RestuarantPOI.HeaderButtonControl"
	x:Name="UserControl"
	d:DesignWidth="89.873" d:DesignHeight="76.9">

	<Grid x:Name="LayoutRoot">
        <Button BorderThickness="0" MinHeight="10" MinWidth="30" Foreground="{x:Null}" Background="{x:Null}" BorderBrush="{x:Null}" Click="NewOrder_OnClick">
			<Border CornerRadius="15" BorderThickness="0,0,0,1" BorderBrush="#c87d47">
				<Border CornerRadius="15" BorderThickness="0.55" BorderBrush="#814822">
					<Border.Background>
						<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
							<GradientStop Color="#c9763e" Offset="0"/>
							<GradientStop Color="#764b30" Offset="1"/>
						</LinearGradientBrush>
					</Border.Background>
					<Grid>
						<TextBlock x:Name="ButtonTitle" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="12,8,12,10" FontSize="13" FontFamily="Segoe UI"><Run Text=""/></TextBlock>
					</Grid>
				</Border>
			</Border>
		</Button>
	</Grid>
</UserControl>